<UserControl x:Class="AirStudio.CommercialManager.Controls.CapsuleBuilderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AirStudio.CommercialManager.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Header with Capsule Name -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Capsule Name:" Foreground="#B0C4DE"
                       VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBox x:Name="CapsuleNameTextBox" Grid.Column="1" Height="36"
                     VerticalContentAlignment="Center"
                     TextChanged="CapsuleNameTextBox_TextChanged"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="Total Duration:" Foreground="#607D8B" VerticalAlignment="Center"/>
                <TextBlock x:Name="TotalDurationLabel" Text="00:00:00"
                           Foreground="#5A8FC4" FontWeight="SemiBold" FontFamily="Consolas"
                           VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBlock x:Name="SegmentCountLabel" Text="(0 segments)"
                           Foreground="#607D8B" VerticalAlignment="Center" Margin="12,0,0,0"/>
            </StackPanel>

            <Button Grid.Column="3" x:Name="ClearButton" Content="Clear All"
                    Click="ClearButton_Click" Width="80"/>
        </Grid>

        <!-- Main Content: Library + Capsule Segments -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Library Panel -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="LIBRARY" FontWeight="Bold"
                               Foreground="#B0C4DE" Margin="0,0,0,8"/>

                    <!-- Search -->
                    <TextBox x:Name="LibrarySearchTextBox" Grid.Row="1" Height="32"
                             VerticalContentAlignment="Center" Margin="0,0,0,8"
                             TextChanged="LibrarySearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="  Search library..." Foreground="#607D8B" Margin="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Library List -->
                    <ListBox x:Name="LibraryListBox" Grid.Row="2"
                             SelectionMode="Single"
                             MouseDoubleClick="LibraryListBox_MouseDoubleClick"
                             PreviewMouseLeftButtonDown="LibraryListBox_PreviewMouseLeftButtonDown"
                             PreviewMouseMove="LibraryListBox_PreviewMouseMove">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Spot}" FontWeight="SemiBold" Foreground="#E0E6ED"/>
                                        <TextBlock Text="{Binding Title}" Foreground="#B0C4DE" FontSize="11"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding Duration}"
                                               Foreground="#607D8B" FontFamily="Consolas"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Right: Capsule Segments Panel -->
            <Border Grid.Column="2" Style="{StaticResource CardPanel}"
                    AllowDrop="True"
                    Drop="SegmentsPanel_Drop"
                    DragOver="SegmentsPanel_DragOver"
                    DragLeave="SegmentsPanel_DragLeave">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CAPSULE SEGMENTS" FontWeight="Bold"
                               Foreground="#B0C4DE" Margin="0,0,0,8"/>

                    <!-- Segments List -->
                    <ListBox x:Name="SegmentsListBox" Grid.Row="1"
                             SelectionMode="Single"
                             SelectionChanged="SegmentsListBox_SelectionChanged"
                             AllowDrop="True"
                             Drop="SegmentsListBox_Drop"
                             DragOver="SegmentsListBox_DragOver"
                             PreviewMouseLeftButtonDown="SegmentsListBox_PreviewMouseLeftButtonDown"
                             PreviewMouseMove="SegmentsListBox_PreviewMouseMove">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Order number -->
                                    <Border Grid.Column="0" Width="28" Height="28" CornerRadius="14"
                                            Background="#3D5A80" Margin="0,0,8,0">
                                        <TextBlock Text="{Binding Order}" Foreground="#E0E6ED"
                                                   FontWeight="Bold" FontSize="12"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Foreground="#E0E6ED"/>
                                        <TextBlock Text="{Binding Commercial.Title}" Foreground="#B0C4DE" FontSize="11"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat='{}{0:hh\\:mm\\:ss}'}"
                                               Foreground="#607D8B" FontFamily="Consolas"
                                               VerticalAlignment="Center" Margin="8,0"/>

                                    <!-- Remove button -->
                                    <Button Grid.Column="3" Content="X" Width="24" Height="24"
                                            Click="RemoveSegmentButton_Click"
                                            Tag="{Binding}"
                                            ToolTip="Remove from capsule">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="#C42B1C"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C42B1C"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state hint -->
                    <Border x:Name="EmptyHintOverlay" Grid.Row="1"
                            Background="#1A2A40" CornerRadius="8" Margin="8">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Drag commercials here" FontSize="16"
                                       Foreground="#B0C4DE" HorizontalAlignment="Center"/>
                            <TextBlock Text="or double-click in library to add" FontSize="12"
                                       Foreground="#607D8B" HorizontalAlignment="Center" Margin="0,4,0,0"/>

                            <!-- Animated arrow pointing to library -->
                            <Canvas Width="60" Height="40" Margin="0,12,0,0" HorizontalAlignment="Center">
                                <Path Data="M50,20 L10,20 M20,10 L10,20 L20,30"
                                      Stroke="#5A8FC4" StrokeThickness="3"
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                    <Path.Style>
                                        <Style TargetType="Path">
                                            <Style.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.4" To="1" Duration="0:0:0.6"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </Canvas>
                        </StackPanel>
                    </Border>

                    <!-- Drop overlay -->
                    <Border x:Name="DropOverlay" Grid.Row="1" Background="#2A5A8F"
                            CornerRadius="8" Opacity="0.9" Visibility="Collapsed">
                        <TextBlock Text="Drop here to add to capsule" FontSize="16"
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Segment actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="MoveUpButton" Content="Move Up" Click="MoveUpButton_Click"
                                Width="80" IsEnabled="False"/>
                        <Button x:Name="MoveDownButton" Content="Move Down" Click="MoveDownButton_Click"
                                Width="80" Margin="8,0,0,0" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Preview Label -->
        <TextBlock Grid.Row="2" Text="CAPSULE PREVIEW" FontWeight="Bold"
                   Foreground="#B0C4DE" Margin="0,12,0,8"/>

        <!-- Waveform Viewer -->
        <Border Grid.Row="3" Background="#0D1B2A" CornerRadius="6">
            <controls:WaveformViewer x:Name="CapsuleWaveformViewer"/>
        </Border>
    </Grid>
</UserControl>
