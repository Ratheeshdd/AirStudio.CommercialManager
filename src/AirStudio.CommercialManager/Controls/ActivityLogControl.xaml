<UserControl x:Class="AirStudio.CommercialManager.Controls.ActivityLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ACTIVITY LOG" FontWeight="Bold" FontSize="16"
                   Foreground="#B0C4DE" Margin="0,0,0,16"/>

        <!-- Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Filter:" Foreground="#B0C4DE"
                       VerticalAlignment="Center" Margin="0,0,8,0"/>

            <CheckBox Grid.Column="1" x:Name="ShowInfoCheckBox" Content="Info"
                      IsChecked="True" Foreground="#B0C4DE" VerticalAlignment="Center"
                      Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed"
                      Margin="0,0,12,0"/>
            <CheckBox Grid.Column="2" x:Name="ShowWarningsCheckBox" Content="Warnings"
                      IsChecked="True" Foreground="#FFA500" VerticalAlignment="Center"
                      Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed"
                      Margin="0,0,12,0"/>
            <CheckBox Grid.Column="3" x:Name="ShowErrorsCheckBox" Content="Errors"
                      IsChecked="True" Foreground="#FF6B6B" VerticalAlignment="Center"
                      Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed"
                      Margin="0,0,12,0"/>

            <StackPanel Grid.Column="5" Orientation="Horizontal">
                <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click"
                        Width="80" Margin="0,0,8,0"/>
                <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click"
                        Width="80"/>
            </StackPanel>
        </Grid>

        <!-- Log List -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}">
            <DataGrid x:Name="LogGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="LogGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" Width="70">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="#607D8B"/>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="50">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsError}" Value="True">
                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                        <Setter Property="Foreground" Value="#FFA500"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Exception Details -->
        <Border Grid.Row="3" Margin="0,12,0,0" Padding="8" CornerRadius="4"
                Background="#1A2A40" x:Name="ExceptionPanel" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Exception Details:" FontWeight="Bold"
                           Foreground="#FF6B6B" Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" x:Name="ExceptionTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         MaxHeight="150"
                         VerticalScrollBarVisibility="Auto"
                         Background="Transparent"
                         Foreground="#E0E6ED"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="11"/>
            </Grid>
        </Border>

        <!-- Status/Actions -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock x:Name="LogCountLabel" Text="0 entries"
                           Foreground="#607D8B" VerticalAlignment="Center"/>
                <TextBlock x:Name="ErrorCountLabel" Text=""
                           Foreground="#FF6B6B" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>

            <CheckBox Grid.Column="1" x:Name="AutoScrollCheckBox" Content="Auto-scroll"
                      IsChecked="True" Foreground="#B0C4DE" VerticalAlignment="Center"
                      Margin="0,0,12,0"/>
            <Button Grid.Column="2" x:Name="OpenLogFolderButton" Content="Open Log Folder"
                    Click="OpenLogFolderButton_Click" Width="120"/>
        </Grid>
    </Grid>
</UserControl>
