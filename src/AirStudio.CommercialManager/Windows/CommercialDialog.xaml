<Window x:Class="AirStudio.CommercialManager.Windows.CommercialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AirStudio.CommercialManager.Controls"
        mc:Ignorable="d"
        Title="Commercial Details"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" x:Name="HeaderText" Text="ADD COMMERCIAL" FontWeight="Bold" FontSize="16"
                   Foreground="#B0C4DE" Margin="0,0,0,16"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Agency Selection -->
                <StackPanel Margin="0,0,0,12">
                    <Label Content="Agency *"/>
                    <controls:AgencyComboBox x:Name="AgencyCombo" Height="36"/>
                </StackPanel>

                <!-- Spot Name and Title in a row -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Content="Spot Name *"/>
                        <TextBox x:Name="SpotTextBox" Height="32" MaxLength="100"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Label Content="Title"/>
                        <TextBox x:Name="TitleTextBox" Height="32" MaxLength="200"/>
                    </StackPanel>
                </Grid>

                <!-- Audio File -->
                <StackPanel Margin="0,0,0,12">
                    <Label Content="Audio File"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="AudioFileTextBox" Grid.Column="0" Height="32" IsReadOnly="True"/>
                        <Button x:Name="BrowseAudioButton" Grid.Column="1" Content="Browse..."
                                Click="BrowseAudioButton_Click" Width="80" Margin="8,0,0,0"/>
                    </Grid>
                    <TextBlock x:Name="DurationLabel" Text="Duration: --"
                               Foreground="#607D8B" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Duration (manual entry if no audio) -->
                <StackPanel Margin="0,0,0,12">
                    <Label Content="Duration (HH:mm:ss) - auto-calculated from audio"/>
                    <TextBox x:Name="DurationTextBox" Height="32" MaxLength="10"/>
                </StackPanel>

                <!-- Other Info -->
                <StackPanel Margin="0,0,0,12">
                    <Label Content="Other Information"/>
                    <TextBox x:Name="OtherinfoTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="500"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Save" Click="SaveButton_Click" Width="100" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
