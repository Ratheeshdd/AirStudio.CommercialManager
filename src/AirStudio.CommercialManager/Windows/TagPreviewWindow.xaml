<Window x:Class="AirStudio.CommercialManager.Windows.TagPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TAG Preview"
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="TAG FILE PREVIEW" FontWeight="Bold" FontSize="16"
                   Foreground="#B0C4DE" Margin="0,0,0,16"/>

        <!-- File Info -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Filename:" Foreground="#607D8B" Margin="0,0,12,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FileNameLabel" Text="--"
                           Foreground="#E0E6ED" FontWeight="SemiBold" FontFamily="Consolas"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Capsule:" Foreground="#607D8B" Margin="0,0,12,4"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CapsuleLabel" Text="--" Foreground="#B0C4DE"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Schedule:" Foreground="#607D8B" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ScheduleLabel" Text="--" Foreground="#B0C4DE"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="CONTENT (Tab-Separated)" FontWeight="Bold"
                           Foreground="#B0C4DE" Margin="0,0,0,8"/>

                <TextBox Grid.Row="1" x:Name="ContentTextBox"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="#0D1B2A"
                         Foreground="#E0E6ED"
                         BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="CopyButton" Content="Copy to Clipboard" Click="CopyButton_Click" Width="120" Margin="0,0,8,0"/>
            <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
