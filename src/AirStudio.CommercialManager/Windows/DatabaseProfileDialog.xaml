<Window x:Class="AirStudio.CommercialManager.Windows.DatabaseProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Profile"
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="DATABASE PROFILE" FontSize="16" FontWeight="Bold"
                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,16"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Profile Name -->
            <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Margin="0,0,0,8" Height="28" Padding="4,2"/>

            <!-- Host -->
            <Label Grid.Row="1" Grid.Column="0" Content="Host/IP:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="HostTextBox" Text="localhost" Margin="0,0,0,8" Height="28" Padding="4,2"/>

            <!-- Port -->
            <Label Grid.Row="2" Grid.Column="0" Content="Port:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="PortTextBox" Text="3306" Margin="0,0,0,8" Height="28" Padding="4,2"/>

            <!-- Username -->
            <Label Grid.Row="3" Grid.Column="0" Content="Username:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="UsernameTextBox" Margin="0,0,0,8" Height="28" Padding="4,2"/>

            <!-- Password -->
            <Label Grid.Row="4" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
            <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PasswordBox" Margin="0,0,0,8"
                         Height="28" Padding="4,2"
                         Background="#1A2A40" Foreground="#FFFFFF" BorderBrush="#3D5A80" BorderThickness="1"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Test Connection" Click="TestConnection_Click" Width="120"/>
            <Button Content="Save" Click="Save_Click" Width="80" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
