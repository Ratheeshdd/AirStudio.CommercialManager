<Window x:Class="AirStudio.CommercialManager.Windows.BroadcastSheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Broadcast Sheet - PDF Export"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="28" VerticalAlignment="Center"
                       Foreground="#5A8FC4" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock Text="BROADCAST SHEET" FontWeight="Bold" FontSize="18" Foreground="#B0C4DE"/>
                <TextBlock x:Name="ChannelLabel" Text="Channel: --" FontSize="12" Foreground="#808080"/>
            </StackPanel>
        </StackPanel>

        <!-- Quick Export Buttons -->
        <GroupBox Grid.Row="1" Header="Quick Export" Margin="0,0,0,16" Padding="12">
            <WrapPanel>
                <Button Content="Today" Click="TodayButton_Click" Width="100" Margin="0,0,8,0"/>
                <Button Content="This Week" Click="ThisWeekButton_Click" Width="100" Margin="0,0,8,0"/>
                <Button Content="This Month" Click="ThisMonthButton_Click" Width="100" Margin="0,0,8,0"/>
                <Button Content="This Year" Click="ThisYearButton_Click" Width="100"/>
            </WrapPanel>
        </GroupBox>

        <!-- Custom Date Range -->
        <GroupBox Grid.Row="2" Header="Custom Date Range" Margin="0,0,0,16" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker Grid.Column="1" x:Name="FromDatePicker"/>

                <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <DatePicker Grid.Column="3" x:Name="ToDatePicker"/>

                <Button Grid.Column="4" Content="Export Custom" Click="CustomExportButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}" MinWidth="120" Padding="12,6" Margin="16,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Options -->
        <GroupBox Grid.Row="3" Header="Include in Report" Margin="0,0,0,16" Padding="12">
            <WrapPanel>
                <CheckBox x:Name="IncludeSpotDetailsCheckBox" Content="Spot Details" IsChecked="True" Margin="0,0,20,0"/>
                <CheckBox x:Name="IncludeAgencyInfoCheckBox" Content="Agency Info" IsChecked="True" Margin="0,0,20,0"/>
                <CheckBox x:Name="IncludeUserInfoCheckBox" Content="User Info" IsChecked="True"/>
            </WrapPanel>
        </GroupBox>

        <!-- Preview / Summary -->
        <GroupBox Grid.Row="4" Header="Preview" Margin="0,0,0,16" Padding="12">
            <StackPanel>
                <TextBlock x:Name="PreviewDateRange" Text="Date Range: --" Margin="0,0,0,4"/>
                <TextBlock x:Name="PreviewScheduleCount" Text="Schedules Found: --"/>
            </StackPanel>
        </GroupBox>

        <!-- Status -->
        <Border Grid.Row="5" x:Name="StatusBorder" Background="#2A3A4A" CornerRadius="4" Padding="12"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="Processing..." Foreground="White"/>
                <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="4" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Close" Click="CloseButton_Click" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
